{% extends "layout.twig" %}
{% block title %}Tickets â€” TicketApp{% endblock %}
{% block content %}
<div class="min-h-screen p-6 flex flex-col items-center">
  <div class="w-full w-full">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold">My Tickets</h2>
      <div class="flex gap-3">
        <button id="openCreateModal" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">+ Add Ticket</button>
        <button id="logoutBtnTop" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Logout</button>
      </div>
    </div>

    <div id="ticketsGrid" class="grid md:grid-cols-2 gap-4"></div>
  </div>
</div>

<!-- Modal markup -->
<div id="modalRoot" class="fixed inset-0 hidden items-center justify-center z-50">
  <div class="fixed inset-0 bg-black/50"></div>
  <div class="bg-white rounded-xl shadow-lg w-[90%] max-w-lg p-6 relative z-10">
    <h3 id="modalTitle" class="text-lg font-semibold mb-3">Add Ticket</h3>
    <form id="modalForm" class="space-y-3">
      <input id="m_title" class="w-full border rounded p-2" placeholder="Title" required />
      <textarea id="m_description" class="w-full border rounded p-2" placeholder="Description"></textarea>
      <div class="grid grid-cols-2 gap-2">
        <select id="m_priority" class="border rounded p-2">
          <option value="low">Low</option>
          <option value="medium">Medium</option>
          <option value="high">High</option>
        </select>
        <select id="m_status" class="border rounded p-2">
          <option value="open">Open</option>
          <option value="in_progress">In Progress</option>
          <option value="closed">Closed</option>
        </select>
      </div>
      <div class="flex justify-end gap-3">
        <button type="button" id="modalCancel" class="px-4 py-2 border rounded">Cancel</button>
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Save</button>
      </div>
    </form>
  </div>
</div>

<script src="/public/js/ui.js"></script>
<script src="/public/js/tickets.js"></script>
{% endblock %}
