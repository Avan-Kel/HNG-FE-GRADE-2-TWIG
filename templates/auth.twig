{% extends 'base.twig' %}

{% block content %}
<h2 class="text-2xl font-bold mb-4">Login / Signup</h2>

<form id="authForm" class="bg-white p-6 rounded shadow max-w-md mx-auto">
    <div class="mb-4">
        <label for="email" class="block font-medium">Email</label>
        <input type="email" id="email" class="w-full border p-2 rounded" required>
        <span class="text-red-500 text-sm hidden" id="emailError">Invalid email</span>
    </div>
    <div class="mb-4">
        <label for="password" class="block font-medium">Password</label>
        <input type="password" id="password" class="w-full border p-2 rounded" required>
        <span class="text-red-500 text-sm hidden" id="passwordError">Password required</span>
    </div>
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Login</button>
</form>
{% endblock %}
